#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk

install/fix-fonts::
	mkdir -p debian/fix-fonts/usr/share/pixmaps
	convert icons/hicolor/32x32/apps/sidux-fonts.png \
		debian/fix-fonts/usr/share/pixmaps/fix-fonts.xpm
	convert icons/hicolor/16x16/apps/sidux-fonts.png \
		debian/fix-fonts/usr/share/pixmaps/fix-fonts-16.xpm
